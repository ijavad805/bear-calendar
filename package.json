    "version:next": "changeset version --snapshot next",
    "release:next": "changeset publish --tag next"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.11.19",
    "classnames": "^2.5.1",
    "css-loader": "^6.10.0",
    "lerna": "^8.1.2",
    "postcss": "^8.4.35",
    "postcss-loader": "^8.1.0",
    "postcss-nested": "^6.0.1",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "style-loader": "^3.3.4",
    "tsdx": "^0.14.1",
    "typescript": "^5.3.3",
    "docz": "^2.4.0"
